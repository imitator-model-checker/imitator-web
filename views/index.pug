extends layout

block content
  div(class="w-1/3 max-w-3xl m-auto bg-white shadow-md rounded p-8 border-t-8 border-gray-800")
    form(id="imitator-form", action="/run", method="post", enctype="multipart/form-data", onsubmit="showSpinner()")
      div(id="spinner")

      div(class="mb-4")
        label(for="models", class="block text-grey-darkest font-bold mb-2") Models
        input(name="models", type="file", id="models", placeholder="~/my-model.imi", required, accept=".imi", multiple, class="shadow border rounded w-full p-2 text-xs text-grey-darker")

      div(class="mb-4")
        label(for="property", class="block text-grey-darkest font-bold mb-2") Property
        input(name="property", type="file", id="property", placeholder="~/my-property.imiprop", accept=".imiprop", required, class="shadow border rounded w-full p-2 text-xs text-grey-darker")

      div(class="mb-4")
        label(for="options", class="block text-grey-darkest font-bold mb-2") Options
        input(name="options", type="text", id="options", placeholder="-depth-limit=10, -statistics", class="shadow border rounded w-full p-2 text-xs text-grey-darker")

      div(class="mb-4")
        label(for="timeout", class="block text-grey-darkest font-bold mb-2") Timeout (s)
        input(name="timeout", type="text", id="timeout", placeholder="10", class="shadow border rounded w-full p-2 text-xs text-grey-darker")

      div(class="pt-6")
        button(type="submit", class="text-lg font-semibold bg-gray-800 w-full text-white rounded-lg px-6 py-3 block shadow-xl hover:text-white hover:bg-black") Run
